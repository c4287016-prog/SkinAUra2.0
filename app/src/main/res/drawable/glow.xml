<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow layer (soft blur simulation) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66FBEBDD"
                android:centerColor="#44FBEBDD"
                android:endColor="#00FBEBDD"
                android:angle="270" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <!-- Actual black card with rounded corners -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#121212" />
            <corners android:radius="28dp" />
        </shape>
    </item>

</layer-list>
