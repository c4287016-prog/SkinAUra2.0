<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- subtle outer shadow -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Main Card -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFDF8"
                android:endColor="#FAF0E6"
                android:angle="135"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#D2BBA0" /> <!-- soft border tone -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>


