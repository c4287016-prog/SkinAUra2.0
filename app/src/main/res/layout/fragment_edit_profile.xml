<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Full Name" android:textSize="12sp" android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/black"
            android:hint="Full Name"
            android:paddingStart="15dp"
            android:background="@drawable/quote_bg"
            android:layout_marginBottom="15dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email Address" android:textSize="12sp" android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email"
            android:focusable="false"
            android:textColor="@color/black"
            android:paddingStart="15dp"
            android:background="@drawable/quote_bg"
            android:alpha="0.6"
            android:layout_marginBottom="15dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Primary Mobile" android:textSize="12sp" android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditMobile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="@color/black"
            android:maxLength="10"
            android:paddingStart="15dp"
            android:background="@drawable/quote_bg"
            android:layout_marginBottom="15dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alternative Mobile" android:textSize="12sp" android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditAltMobile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Secondary Number (Optional)"
            android:inputType="phone"
            android:textColor="@color/black"
            android:maxLength="10"
            android:paddingStart="15dp"
            android:background="@drawable/quote_bg"
            android:layout_marginBottom="15dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Password" android:textSize="12sp" android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/etEditPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Leave blank to keep current"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:background="@drawable/quote_bg"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Save Changes"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>