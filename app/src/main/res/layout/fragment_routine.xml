<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skincare Routine"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Consistency is the key to glowing skin! âœ¨"
            android:textColor="#888888"
            android:textSize="14sp" />

        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="#E89055" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/imgMorning"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sun"
                    app:tint="#E89055" />

                <TextView
                    android:id="@+id/tvMorningTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/imgMorning"
                    android:text="Morning Routine"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMorningTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMorningTitle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/imgMorning"
                    android:text="Not scheduled"
                    android:textColor="#888888" />

                <Button
                    android:id="@+id/btnSetMorning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMorningTime"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/imgMorning"
                    android:layout_marginStart="15dp"
                    android:backgroundTint="#000000"
                    android:text="Set Reminder"
                    android:textAllCaps="false"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/imgNight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/moon"
                    app:tint="#5C6BC0" />

                <TextView
                    android:id="@+id/tvNightTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/imgNight"
                    android:text="Night Routine"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNightTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNightTitle"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/imgNight"
                    android:text="Not scheduled"
                    android:textColor="#888888" />

                <Button
                    android:id="@+id/btnSetNight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNightTime"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/imgNight"
                    android:layout_marginStart="15dp"
                    android:backgroundTint="#000000"
                    android:text="Set Reminder"
                    android:textAllCaps="false"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>