<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FBEBDD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Header -->
        <LinearLayout
            android:id="@+id/topHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="107dp"
                android:src="@drawable/sy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SkinAura"
                android:textSize="43sp"
                android:fontFamily="@font/playfair_display"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#CC000000"
            android:layout_marginBottom="16dp" />

        <!-- Signup Card -->
        <LinearLayout
            android:id="@+id/cardSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glow"
            android:elevation="20dp"
            android:padding="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.05"
                android:gravity="center" />

            <!-- Username -->
            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:hint="Username"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:inputType="text"
                android:drawableStart="@drawable/outline_contacts_product_24"
                android:drawablePadding="10dp"
                android:background="@drawable/out"
                android:paddingStart="14dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:hint="Email"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/outline_attach_email_24"
                android:drawablePadding="10dp"
                android:background="@drawable/out"
                android:paddingStart="14dp" />

            <!-- Mobile -->
            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:hint="Mobile Number"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:inputType="phone"
                android:maxLength="10"
                android:drawableStart="@drawable/outline_call_24"
                android:drawablePadding="10dp"
                android:background="@drawable/out"
                android:paddingStart="14dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:hint="Password"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:drawableStart="@drawable/outline_admin_panel_settings_24"
                android:drawableEnd="@drawable/eye"
                android:background="@drawable/out"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:hint="Confirm Password"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:drawableStart="@drawable/outline_admin_panel_settings_24"
                android:drawableEnd="@drawable/eye"
                android:background="@drawable/out"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

            <!-- DOB -->
            <EditText
                android:id="@+id/edtDOB"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:hint="Date of Birth"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:background="@drawable/out"
                android:paddingStart="14dp" />

            <!-- Signup Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:text="Sign Up"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:background="@drawable/pink"
                app:backgroundTint="@null"
                app:rippleColor="#22FFFFFF" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

            <!-- Login Text -->
            <TextView
                android:id="@+id/txtLoginNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textColor="#FBEBDD"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
