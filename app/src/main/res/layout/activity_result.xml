<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_layout"
    android:layout_width="match_parent"
    android:background="#FFE6EE"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/face1_removebg_preview"
        android:alpha="0.9" />

    <!-- Glassmorphism Overlay -->
    <LinearLayout
        android:id="@+id/glass_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/glass_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="1dp">

        <!-- SkinAura Text Vertical -->
        <TextView
            android:id="@+id/tv_skinAura"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SkinAura"
            android:textSize="68dp"
            android:textColor="#EDEDED"
            android:fontFamily="@font/playfair_display"
            android:rotation="-90"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/quote_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="24dp"
        android:background="@drawable/quote_bg"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/skin_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Your Skin Type is: Oily"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/roboto_medium" />

        <TextView
            android:id="@+id/tv_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beautiful skin is not exclusive to one type. Itâ€™s the reward of daily rituals, clean habits, and choosing calm over chaos."
            android:background="@drawable/quote_bg"
            android:padding="8dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="3"
            android:gravity="center"
            android:fontFamily="@font/playfair_display"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Start Shopping"
        android:textColor="#000000"
        android:textSize="14sp"
        android:backgroundTint="#FFE6EE"
        app:cornerRadius="22dp"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:rippleColor="@color/button_ripple"
        android:elevation="4dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />


</FrameLayout>
