<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homeactivity">

    <RelativeLayout
        android:id="@+id/homeRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFDF5"
        android:fitsSystemWindows="true">

        <ScrollView
            android:id="@+id/homeScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigation"
            android:fillViewport="true"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:id="@+id/menuIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/menu"
                        android:contentDescription="Menu" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SkinAura"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/playfair_bold"
                        android:gravity="center"
                        android:letterSpacing="0.15"
                        android:shadowColor="#A0A0A0"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"/>

                    <FrameLayout
                        android:id="@+id/profileSection"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/round_profile"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Profile"
                            android:padding="6dp"
                            android:src="@drawable/skinr" />
                    </FrameLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/btnCleanser"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/cleanser1"
                                android:background="@drawable/circle_bg"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cleanser"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnMoisturizer"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/moisturizer"
                                android:background="@drawable/circle_bg"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Moisturizer"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnSunscreen"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/sunscreen"
                                android:background="@drawable/circle_bg"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunscreen"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnSerum"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/serum"
                                android:background="@drawable/circle_bg"
                                android:scaleType="centerCrop"
                                android:clipToOutline="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Serum"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_card" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="16dp"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <TextView
                        android:id="@+id/cardoil"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:background="@drawable/rounded_card"
                        android:text="Oily Skin"
                        android:textColor="#121212"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/playfair_display" />

                    <TextView
                        android:id="@+id/carddry"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:background="@drawable/rounded_card"
                        android:text="Dry Skin"
                        android:textColor="#121212"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/playfair_display" />

                    <TextView
                        android:id="@+id/cardsen"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:background="@drawable/rounded_card"
                        android:text="Sensitive Skin"
                        android:textColor="#121212"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/playfair_display" />

                    <TextView
                        android:id="@+id/cardcom"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:background="@drawable/rounded_card"
                        android:text="Combination Skin"
                        android:textColor="#121212"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/playfair_display" />
                </GridLayout>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigation"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#FFFDF5"
            android:gravity="center"
            android:weightSum="5"
            android:elevation="6dp">

            <LinearLayout
                android:id="@+id/accountLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/account" />
                <TextView android:text="Account" android:textSize="12sp" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/playfair_display" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/category" />
                <TextView android:text="Category" android:textSize="12sp" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/playfair_display" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/pink_bt" android:layout_gravity="center">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/home" android:layout_gravity="center" />
                </FrameLayout>
                <TextView android:text="Home" android:textSize="12sp" android:textColor="#000" android:layout_marginTop="2dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/playfair_display" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/premiumLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/premium" />
                <TextView android:text="Premium" android:textSize="12sp" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/playfair_display" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cartLayout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/cart" />
                <TextView android:text="Cart" android:textSize="12sp" android:textColor="#000" android:fontFamily="@font/playfair_display" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        android:background="#fff" />

</androidx.drawerlayout.widget.DrawerLayout>