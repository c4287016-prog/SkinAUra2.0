<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="30dp">

    <ProgressBar
        android:id="@+id/paymentLoader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateTint="#E91E63"
        android:layout_marginBottom="20dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/successLottie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:lottie_rawRes="@raw/done_p"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/statusTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for Payment Confirmation..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"/>

    <TextView
        android:id="@+id/instructionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please open your UPI app and accept the request"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/timerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:textSize="32sp"
        android:textColor="#E91E63"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"
        android:textStyle="bold"/>

</LinearLayout>